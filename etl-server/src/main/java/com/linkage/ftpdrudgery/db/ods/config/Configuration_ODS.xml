<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-config.dtd">
<configuration>
	
	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="false" />
		<setting name="multipleResultSetsEnabled" value="true" />
		<setting name="useColumnLabel" value="true" />
		<setting name="useGeneratedKeys" value="false" />		
		<setting name="defaultExecutorType" value="SIMPLE" />
		<!--  <setting name="defaultStatementTimeout" value="25000" /> -->
	</settings>
	
	<typeAliases>
		<typeAlias alias="OdsPubLog" type="com.linkage.ftpdrudgery.db.ods.bean.OdsPubLog" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.ibm.db2.jcc.DB2Driver" />
				<property name="url" value="jdbc:db2://127.0.0.1:50000/VGOPDB:currentSchema=VGOP_ODS;" />
				<property name="username" value="db2admin" />
				<property name="password" value="123456" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="com/linkage/ftpdrudgery/db/ods/map/ODS_PUB_LOG_SqlMap.xml" />
	</mappers>
	
</configuration>
